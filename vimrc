" colors
syntax on
colorscheme ron

" three lines of context when scrolling
set scrolloff=3

" incremental searach
set incsearch

" no bells
set vb t_vb=

" Matching parentheses
set showmatch
set matchtime=2

" Indentation {{{
set tabstop=4
set shiftwidth=4
set softtabstop=4
set expandtab
set shiftround
set autoindent
set smartindent
" }}}

" Folding {{{
set foldmethod=marker
set foldclose=all
" }}}
